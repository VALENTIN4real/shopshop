{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Contact {% endblock %}

{% block contenu %}
    <h1 class="text-center">Nous contacter</h1>
    <div class="row h-75 justify-content-center align-items-center">
        <form class="col-sm-6" action="index.php?page=contact" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label for="email">Adresse mail (*)</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos informations de connexion.</small>
            </div>
            <div class="form-group">
                <label for="message">Votre message (*)</label>
                <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
            </div>
            <div class"center-block">
            <button name="btContact" type="submit" class="btn btn-primary">Envoyer</button>
            </div>
        </form>
    </div>
{% endblock %}